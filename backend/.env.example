# ===========================
# Zero-Touch Onboarding Backend
# ===========================
# Copy this file to .env and fill in your values.

# ── Application ──────────────────────────────────────────
APP_NAME=Zero-Touch Onboarding Orchestrator
DEBUG=True

# ── Database ─────────────────────────────────────────────
DATABASE_URL=sqlite:///./data/onboarding.db

# ── Authentication ───────────────────────────────────────
SECRET_KEY=dev-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── AI / LLM (leave empty to use mock responses) ────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
LLM_PROVIDER=groq
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ── Embeddings (Voyage AI — 50M free tokens, no CC) ─────
VOYAGE_API_KEY=your-voyage-api-key-here
VOYAGE_EMBEDDING_MODEL=voyage-2

# ── Google OAuth (leave empty to skip Google auth) ──────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── CORS (comma-separated production frontend URLs) ─────
# Set this on your AWS VM to your Vercel deployment URL
CORS_ORIGINS_STR=https://axiom-chi-eight.vercel.app
